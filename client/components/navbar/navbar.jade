header.header
  .header-content(ng-if="!navbar.isSearchExpanded")
    .header-app-nav
      a(ng-click="onToggleShowMenu()")
        i.fa.fa-bars.header-app-nav-collapsed-ui
        i.fa.fa-times.header-app-nav-expanded-ui
    h1.header-title
      a(ui-sref="main.bus-stops") NYC Bus Time Finder
    .header-search-nav
      a(ui-sref="routes.search({search:''})")
        i.fa.fa-search
  .header-content(ng-if="navbar.isSearchExpanded")
    form.header-search-form(
      name="header-search-form"
      ng-submit="searchSubmit()"
    )
      label.header-search-label(for="search")
        i.fa.fa-search
      .header-search-input-container
        input.header-search-input(
          id="search"
          name="search"
          type="text"
          placeholder="Search bus routes"
          ng-model="navbar.inputs.search"
          ng-change="searchSubmit()"
          focus
        )
    .header-search-nav
      a(ui-sref="routes.default")
        i.fa.fa-times
  .header-nav-scrim
  nav.header-nav
    ul.header-nav-list
      li
        a(ui-sref="main.bus-stops" ng-click="onToggleShowMenu(false)")
          | Map
          i.fa.fa-chevron-right
      li
        a(ui-sref="routes.default" ng-click="onToggleShowMenu(false)") 
          | Routes
          i.fa.fa-chevron-right
      li
        a(ui-sref="about" ng-click="onToggleShowMenu(false)")
          | About
          i.fa.fa-chevron-right
      li
        button.btn.btn-primary.btn-block.header-nav-close-btn.font-m(ng-click="onToggleShowMenu(false)") Close
